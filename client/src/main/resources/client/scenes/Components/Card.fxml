<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="root" prefHeight="70.0" style="-fx-background-radius: 10px; -fx-background-color: white; -fx-border-color: ddd; -fx-border-radius: 10px" type="Pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MFXButton fx:id="deleteTaskButton" layoutX="103.0" layoutY="6.0" text="X">
            <font>
                <Font name="Roboto Bold" size="15.0" />
            </font>
            <padding>
                <Insets />
            </padding>
        </MFXButton>
        <MFXTextField fx:id="taskTitle" floatMode="DISABLED" layoutX="4" layoutY="4.0" prefHeight="20.0" prefWidth="85.0">
            <font>
                <Font name="Roboto" size="13" />
            </font>
            <padding>
                <Insets />
            </padding>
        </MFXTextField>
        <MFXButton fx:id="openTask" layoutX="100.0" layoutY="41.0" text="">
            <graphic>
                <ImageView fitHeight="15.0" fitWidth="15.0" style="-fx-background-color: transparent">
                    <image>
                        <Image url="@/client/images/detailed_task_view.png" />
                    </image>
                </ImageView>
            </graphic>
            <padding>
                <Insets />
            </padding>
        </MFXButton>
        <GridPane fx:id="tags" hgap="3" layoutX="5" layoutY="50" prefHeight="25" prefWidth="100" vgap="3">

        </GridPane>
      <ImageView fx:id="descriptionImage" fitHeight="15.0" fitWidth="15.0" layoutX="8.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true" visible="false">
          <image>
              <Image url="@/client/images/description.png" />
          </image>
      </ImageView>
      <MFXProgressBar fx:id="progressBar" animationSpeed="0.0" layoutX="49.0" layoutY="37.0" prefWidth="40.0" />
      <Label fx:id="progressLabel" layoutX="27.0" layoutY="31.0" >
          <font>
              <Font name="Roboto Semibold" size="12.0" />
          </font>
      </Label>
    </children>
</fx:root>
